<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mappers.postMapper">
	<resultMap type="postVO" id="postResult">
	</resultMap>
	
	<select id="selectAll" resultMap="postResult">
		<![CDATA[
			select * from post
		]]>
	</select>
	<select id="selectOne" resultMap="postResult" parameterType="int">
		<![CDATA[
		select * from post
		where postid = #{postid}
		]]>
	</select>
	<select id="selectByUserid" resultMap="postResult" parameterType="int">
		<![CDATA[
		select * from post
		where userId = #{userid}
		]]>
	</select>
	<insert id="insert" parameterType="postVO">
		<![CDATA[
			insert into post 
			(content,postdate,totallike,userid,privacyid)
			values
			(#{content}, #{postdate}, #{totallike},#{userid},#{privacyid})
		]]>
	</insert>
	<update id="update" parameterType="postVO">
		<![CDATA[
			update post set
			content = #{content},
			postdate = #{postdate},
			toallike = #{totallike},
			userid = #{userid},
			privacyid = #{privacyid]
			where postid = #{postid}
		]]>
	</update>
	<delete id="delete" parameterType="int">
		<![CDATA[
			delete from post WHERE postid = #{postid}
		]]>
	</delete>
</mapper>