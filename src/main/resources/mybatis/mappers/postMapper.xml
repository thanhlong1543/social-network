<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mappers.postMapper">
	<resultMap type="postVO" id="postResult">
	</resultMap>
	
	<select id="selectAll" resultMap="postResult">
		<![CDATA[
			select * from post
		]]>
	</select>
	<select id="selectOne" resultMap="postResult" parameterType="int">
		<![CDATA[
		select * from post
		where postid = #{postId}
		]]>
	</select>
	<select id="selectByUserid" resultMap="postResult" parameterType="int">
		<![CDATA[
		select * from post
		where userId = #{userid}
		]]>
	</select>
	<insert id="insert" parameterType="postVO">
		<![CDATA[
			insert into post 
			(content,postdate,totallike,userid,privacyid,isdelete)
			values
			(#{content}, #{postDate}, #{totalLike},#{userId},#{privacyId},#{isdelete})
		]]>
	</insert>
	<update id="update" parameterType="postVO">
		<![CDATA[
			update post set
			content = #{content},
			postdate = #{postDate},
			totallike = #{totalLike},
			userid = #{userId},
			privacyid = #{privacyId},
			isdelete = #{isdelete}
			where postid = #{postId}
		]]>
	</update>
	<update id="isdelete" parameterType="map">
		<![CDATA[
			update post set
			isdelete = ${isdelete}
			where postid = ${postId}
		]]>
	</update>
	<delete id="delete" parameterType="int">
		<![CDATA[
			delete from post WHERE postid = #{postid}
		]]>
	</delete>
</mapper>